package atongmu.atg;
import atongmu.util.*;
import atongmu.ast.Var;
import atongmu.ast.ConstDecl;
public final class StrVar{
	private int len;
	private char chars[];
	private Var vars[];	

	public StrVar(int bound){
		len = bound;
		chars = new char[len];
		vars = new Var[len];
	}

	public int length(){return len;}
	public char get(int i){return chars[i];}
	public boolean isValid(){return chars!=null;}
	public boolean isEmpty(){return len==0;}

	/* evaluate to an array of vars, the prefix must be different for each var */
	public Var[] eval(String prefix){
		for (int i=0;i<len;i++){
			vars[i] = new Var(prefix+"_0");
			ConstDecl c = new ConstDecl(vars[i]);
		}
		return vars;
	}

}
